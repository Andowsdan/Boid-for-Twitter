<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Boid.PureBlackTheme" parent="@style/Boid.DarkTheme">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_pure_black</item>
        <item name="android:popupMenuStyle">@style/pure_black_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/pure_black_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/pure_black_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/pure_black_DropDownNav</item>
        <item name="android:actionBarStyle">@style/pure_black_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_pure_black</item>
        
        <item name="android:windowBackground">@android:color/black</item>  
        <item name="themeColor">@android:color/black</item>
    </style>

    <style name="pure_black_solid_ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_pure_black</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_pure_black</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_pure_black</item>
        <item name="android:progressBarStyle">@style/pure_black_ProgressBar</item>
    </style>
    <style name="pure_black_transparent_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_pure_black</item>
        <item name="android:progressBarStyle">@style/pure_black_ProgressBar</item>
    </style>

    <style name="pure_black_PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pure_black</item>
    </style>

    <style name="pure_black_DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_pure_black</item>
    </style>

    <style name="pure_black_ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_pure_black</item>
    </style>

    <style name="pure_black_DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_pure_black</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pure_black</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_pure_black</item>
    </style>

    <style name="pure_black_ProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_pure_black</item>
    </style>
</resources>