<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:paddingLeft="10dp" android:paddingTop="10dp"
	android:paddingBottom="10dp">
	<com.handlerexploit.prime.widgets.RemoteImageView
		android:id="@+id/userItemProfilePic" android:layout_width="50dp"
		android:layout_height="50dp" android:layout_marginRight="10dp"
		android:src="@drawable/silouette" />
	<TextView android:id="@+id/userItemName" android:textColor="?usernameColor"
		android:singleLine="true" android:layout_width="wrap_content"
		android:layout_marginRight="10dp" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/userItemProfilePic" android:textStyle="bold"
		android:textAppearance="?android:attr/textAppearanceSmall" />
	<TextView android:id="@+id/userItemDescription"
		android:layout_marginRight="5dp" android:textColor="?tweetColor"
		android:textColorLink="?linkColor" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/userItemName"
		android:layout_toRightOf="@+id/userItemProfilePic" />
	<com.handlerexploit.prime.widgets.RemoteImageView
		android:id="@+id/userItemVerified" android:scaleType="fitCenter"
		android:layout_toRightOf="@+id/userItemName" android:visibility="gone"
		android:layout_width="15dp" android:layout_height="15dp"
		android:layout_marginTop="1dp" android:layout_marginRight="10dp"
		android:src="@drawable/verified" />
</RelativeLayout>