<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="10dp">
	<TextView android:id="@android:id/text1" android:textColor="?tweetColor"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView android:id="@android:id/text2" android:textColor="?linkColor"
		android:layout_toRightOf="@android:id/text1"
		android:layout_alignBottom="@android:id/text1"
		android:layout_alignBaseline="@android:id/text1"
		android:layout_marginLeft="10dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>