<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:paddingRight="5dp">
	<ImageView android:id="@+id/drag" android:layout_width="wrap_content"
		android:layout_marginRight="5dp" android:layout_height="60dp"
		android:background="@drawable/drag" />
	<TextView android:id="@+id/text" android:layout_width="fill_parent" android:textColor="?tweetColor"
		android:layout_height="wrap_content" android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/drag" android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>