<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="horizontal">
	<RadioButton android:id="@+id/radio" android:layout_width="0dp"
		android:layout_weight="100" 
		android:layout_marginRight="5dp" android:layout_marginTop="6dp"
		android:layout_marginBottom="6dp" android:layout_height="fill_parent" />
	<ImageButton android:src="@android:drawable/ic_menu_preferences"
		android:id="@+id/button" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>